    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        host = tfHost.getText();
        id = tfId.getText();
        password = tfPassword.getText();
        csdl = tfCsdl.getText();
        // Tạo Url kết nối đền DataBase Server
        String url = "jdbc:mysql://" + host + ":3306/" + csdl + "?useUnicode=true&characterEncoding=UTF-8";
        try {
            // Tạo Connection thông qua Url
            con = DriverManager.getConnection(url, id, password);
            st = con.createStatement();
            rs = st.executeQuery("Select * from canbo");
            JOptionPane.showMessageDialog(this, "Kết nối thàng công");
            rs.close();
            st.close();
            con.close();
        } // Nếu không thành công ném lỗi ra ngoài.
        catch (java.sql.SQLException e) {
            JOptionPane.showMessageDialog(this, "Không thể kết nối đến DataBase Server: " + url + " " + e.getMessage());
        }

    }//GEN-LAST:event_jButton3ActionPerformed

