    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        int j = JOptionPane.showConfirmDialog(this, "Bạn có thật sự muốn xóa không?", "Chú ý", JOptionPane.YES_NO_OPTION);
        if (j == 0) {
            try {
                int a = con.executeUpdate("DELETE FROM log");               
                JOptionPane.showMessageDialog(this, "Xóa thành công");
                lThongke();
                loadTable();
            } catch (Exception ex) {
                Logger.getLogger(FLog.class.getName()).log(Level.SEVERE, null, ex);
            }
        }


    }//GEN-LAST:event_jButton1ActionPerformed

